<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/custom_blue"
    tools:context=".AccueilFragment">

    <ScrollView
        android:id="@+id/scrlAccueil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="5dp"
                android:background="@color/custom_beige"
                android:fontFamily="@font/kronika"
                android:text="ACCUEIL"
                android:textAlignment="center"
                android:textColor="@color/custom_blue"
                android:textSize="20sp" />

            <include
                android:id="@+id/sbSearch"
                layout="@layout/fragment_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <LinearLayout
                android:id="@+id/llMenuAccueilSeries"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner_custom_beige"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivMenuAccueilSeries"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:src="@drawable/series_bleu" />

                <TextView
                    android:id="@+id/tvMenuAccueilSeries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:fontFamily="@font/kronika"
                    android:text="SERIES"
                    android:textColor="@color/custom_blue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMenuAccueilTomes"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner_custom_beige"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivMenuAccueilTomes"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:src="@drawable/tomes_bleu" />

                <TextView
                    android:id="@+id/tvMenuAccueiTomes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:fontFamily="@font/kronika"
                    android:text="TOMES"
                    android:textColor="@color/custom_blue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner_custom_beige"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivMenuAccueilAuteurs"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:src="@drawable/auteurs_bleu" />

                <TextView
                    android:id="@+id/tvMenuAccueilAuteurs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:fontFamily="@font/kronika"
                    android:text="AUTEURS"
                    android:textColor="@color/custom_blue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner_custom_beige"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivMenuAccueilEditeurs"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:src="@drawable/editeurs_bleu" />

                <TextView
                    android:id="@+id/tvMenuAccueilEditeurs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:fontFamily="@font/kronika"
                    android:text="EDITEURS"
                    android:textColor="@color/custom_blue"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:background="@color/custom_beige"
                android:orientation="horizontal">


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>